<configuration>
  <appender name="file" class="ch.qos.logback.core.FileAppender">
  	<file>logging-logback.log</file>
  	<append>false</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="deng" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="file" />
  </root>
</configuration>